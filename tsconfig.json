{
  "compilerOptions": {
    "allowJs": false,
    "target": "es5",
    "lib": ["es2015"],
    "module": "esnext",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true
  }
}
